<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35c46e"
    android:id="@+id/winnerActivity"
    tools:context=".UserStatue">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/lay"
        android:scaleType="centerCrop"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:src="@drawable/timon" />
    <TextView
        android:id="@+id/textFor_Winner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="60dp"
        android:gravity="center_horizontal"
        android:text="@string/you_statue"
        android:textSize="50sp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/textFor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textFor_Winner"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:text="@string/your_name"
        android:textSize="50sp"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>
