<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserStatueActivity">

    <RelativeLayout
        android:id="@+id/winnerActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#35c46e">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:contentDescription="@string/user_statue_background"
            android:scaleType="centerCrop"
            android:src="@drawable/lay" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/user_pic"
            android:src="@drawable/timon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/textFor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/your_name"
                android:textSize="50sp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/textFor_Winner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/you_statue"
                android:textSize="50sp"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
